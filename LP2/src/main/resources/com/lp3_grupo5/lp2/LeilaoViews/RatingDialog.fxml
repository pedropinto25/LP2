<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #18191A;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.lp2.lp2.Controller.Leilao.RatingController">
    <children>
        <Label layoutX="120.0" layoutY="20.0" text="Avaliar Leilão" textFill="WHITE" style="-fx-font-weight: BOLD;">
            <font>
                <Font name="Century Gothic Bold" size="24.0" />
            </font>
        </Label>
        <ChoiceBox fx:id="ratingChoice" layoutX="150.0" layoutY="80.0" prefWidth="100.0" />
        <TextArea fx:id="commentField" layoutX="50.0" layoutY="120.0" prefHeight="100.0" prefWidth="300.0" promptText="Comentário (opcional)" wrapText="true" />
        <Button fx:id="btnEnviar" layoutX="160.0" layoutY="240.0" onAction="#handleBtnEnviar" style="-fx-background-color: none; -fx-border-color: white;" text="Enviar" textFill="WHITE" >
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>
    </children>
</AnchorPane>
